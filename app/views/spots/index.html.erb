<div class="container">
  <div class="banner">
    <div class="banner-img">
      <%= image_tag "reading-nerimaru.jpg"  %>
    </div>
    <div class="banner-header">
      <h1>Hidden Nerima</h1>
    </div>
  </div>
  <div class="navbar-dropdown">
    <ul>
      <li><%= link_to "Home", "#", class: "index-nav-link" %></li>
      <li class="dropdown"><%= link_to '#', class:"dropbtn" do%>
          Foods <%= image_tag('arrow-drop-down-rounded.svg') %>
        <% end %>
        <div class="dropdown-content foods">
          <%= link_to "Japanese", "#"%>
          <%= link_to "Western", "#"%>
          <%= link_to "Korean", "#"%>
        </div>
      </li>
      <li class="dropdown"><%= link_to '#', class:"dropbtn" do%>
          Experiences <%= image_tag('arrow-drop-down-rounded.svg') %>
        <% end %>
        <div class="dropdown-content experiences">
          <%= link_to "Shrines", "#"%>
          <%= link_to "Parks", "#"%>
          <%= link_to "Museums", "#"%>
        </div>
      </li>
      <li class="dropdown"><%= link_to '#', class:"dropbtn" do%>
          My Page <%= image_tag('arrow-drop-down-rounded.svg') %>
        <% end %>
        <div class="dropdown-content my-page">
          <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}%>
        </div>
      </li>
    </ul>
  </div>
  <h2 class="small-header">Popular Attractions</h2>
  <div class="cards">
    <% @spots.first(50).each do |spot| %>
      <div class="cta">
        <%= cl_image_tag spot.photos.first.key %>
        <div class="text">
          <h2><%= spot.name%></h2>
          <p><%= spot.description %></p>
        </div>
      </div>
    <% end %>
  </div>
  <br>
  <br>
</div>
