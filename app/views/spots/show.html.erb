  <%= render "shared/navbar" %>
<div class="container">
  <div class="headers-icons">
    <div class ="headers">
      <h2><%= @spot.name%></h2>
      <h4><%= @spot.description %></h4>
    </div>
    <div class="icons">
      <h2>Add icons here</h2>
      <div style="width: 100%; height: 600px;"
  data-controller="map"
