<%= simple_form_for spot do |f| %>
  <div class="container">
    <div class="headers-icons">
      <div class="d-flex w-100 justify-content-between">
        <div class ="headers">
          <h2><%= f.input :name, label: 'Spot name', error: "Spot's must have a name!" %></h2>
          <h4><%= f.input :description, label: "Spot's description", error: "You must describe your spot!", input_html: {style:"min-height: 100px"}%></h4>
          <%= f.input :photos, as: :file, input_html: { multiple: true, class: 'black-shadow'}, label: "Upload as many photos as you want, select with ctrl for windows, cmd for Mac!" %>
        </div>
        <div class="headers headers-two">
          <h4>
            <%= f.input :location, label: "The location", error: "Must have a location!"%>
            <%= f.input :category, as: :select, collection: {"food": "food", "experience": "experience"}, label: "Pick a category", error: "Spots must have a category!" %>
            <%= f.input :sub_category, label: "Get more specific, what type of food or experience is it?" %>
            <%= f.input :hours_open, label: "When is it open?" %>
          </h4>
        </div>
      </div>
    </div>
